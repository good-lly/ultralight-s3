{
  "name": "ultralight-s3",
  "version": "0.0.7",
  "description": "ðŸª½ A turbo lightweight S3 client, no-dependency, ideal for edges or platforms like @cloudflare @aws @Azure @GoogleCloudPlatform @ceph @minio",
  "main": "./lib/index.min",
  "module": "./lib/index.min.js",
  "types": "./lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.min.js"
      },
      "types": {
        "import": {
          "types": "./lib/index.d.ts",
          "default": "./lib/index.d.ts"
        }
      }
    },
    "./full": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublishOnly": "npm run build && npm run test:all",
    "build:ts": "tsc",
    "build": "tsc --module node16 --outDir ./lib/ &&  esbuild lib/index.js --bundle --outfile=lib/index.min.js --platform=node --format=esm --minify --sourcemap",
    "dev:wrangler": "wrangler dev --port 8787",
    "dev:node": "nodemon --watch './src/index.ts' --delay 2.5 -L --verbose --exec 'tsc --module node16 --outDir ./lib/ && node --max-old-space-size=4096 --env-file ./.env ./dev/node-dev.js'",
    "test:minio": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config node.jest.config.json",
    "test:cloudflare": "node --env-file ./.env-cf --experimental-vm-modules node_modules/jest/bin/jest.js --config cloudflare.jest.config.json",
    "test:all": "npm run test:minio && npm run test:cloudflare",
    "clean": "rm -rf lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sentienhq/ultralight-s3.git"
  },
  "jest": {
    "projects": [
      "tests/node.jest.config.js"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "api",
    "amazon",
    "minio",
    "cloud",
    "s3",
    "storage",
    "aws",
    "cloudflare",
    "cloudflare-r2",
    "cloudflare-storage",
    "azure",
    "google",
    "google-cloud",
    "ceph"
  ],
  "author": "Peter Jensen @ SentienHQ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sentienhq/ultralight-s3/issues"
  },
  "homepage": "https://github.com/sentienhq/ultralight-s3#readme",
  "devDependencies": {
    "@hono/node-server": "^1.11.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "esbuild": "^0.23.0",
    "jest": "^29.7.0",
    "minio": "^8.0.1",
    "nodemon": "^3.1.3",
    "typescript": "^5.5.3",
    "hono": "^4.5.8"
  }
}
